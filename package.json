{
  "name": "GRX-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "prettier": "^3.6.2",
    "turbo": "^2.8.3",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.20.0",
  "pnpm": {
    "overrides": {
      "esbuild": "0.26.0"
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
